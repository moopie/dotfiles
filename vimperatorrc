" vi: set ft=vim :

" Options {{{1
set runtimepath=~/.vimperator
set titlestring=""
set messages=100
set verbose=1
set toolbars=noaddons,nobookmarks,nomenu,tabs
set complete=slS
set history=1000
set newtab=all
set popups=tab
set nohlsearch
set ignorecase
set incsearch
set smartcase
set focuscontent
set visualbell
set hintchars=hjklasdfgyiopqwertnmzxcvb

let mapleader=","

" Search engine
set defsearch=duckduckgo

highlight Bell display: none; 

" move
noremap j 6j
noremap k 6k
noremap J gT
noremap K gt
set scroll=7

" undo list
noremap U :undo<Space>

" Jump from selection in visual mode
vmap <silent> <C-g> y<Esc><Esc>P
