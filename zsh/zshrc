# Path to the oh-my-zsh configuration
ZSH=$HOME/.config/oh-my-zsh

# Use theme from $ZSH/themes/
ZSH_THEME="dieter"

# Disable bi-weekly auto-update checks
DISABLE_AUTO_UPDATE="true"

# Load plugins from $ZSH/plugins/
plugins=(git virtualenv common-aliases colored-man extract)

source $ZSH/oh-my-zsh.sh

# Customs

for dir in \
    /usr/local/sbin \
    /usr/local/bin \
    /usr/bin \
    /usr/bin/core_perl \
    $HOME/.local/bin \
    $HOME/.gem/ruby/2.1.0/bin \
    $HOME/.cabal/bin \
    $HOME/android-studio/bin \
    $HOME/android-studio/sdk/platform-tools \
; do
    if [[ -d "$dir" ]]; then path+="$dir"; fi
done

# Add go to the path if it exists
if [[ -d $HOME/go ]]; then
    export GOPATH=$HOME/go
    path+=$GOPATH/bin
fi

# Remove duplicates from $PATH
typeset -U PATH

export EDITOR=vim
